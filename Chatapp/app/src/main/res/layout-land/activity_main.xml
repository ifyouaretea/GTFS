<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.haductien.chatapp.MainActivity$PlaceholderFragment"
    android:weightSum="1"
    android:id="@+id/main"><![CDATA[

    TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/action_settings"
        android:id="@+id/textView"
        android:gravity="left"
        android:layout_weight="0.89"
        android:layout_gravity="top" />



    ]]>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"></TableRow>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:id="@+id/button"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="CHAT WINDOW"
            android:id="@+id/textView"
            android:layout_weight="1"
            android:gravity="center" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:id="@+id/imageView"
            android:src="@drawable/ic_action_edit"
            android:layout_weight="1.10"
            android:clickable="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="left|right">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/editText"
                android:text="Search"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="380dp">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="382dp"
            android:id="@+id/listView" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView2"
            android:layout_weight="0.15"
            android:src="@drawable/ic_action_star"
            android:clickable="true" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView3"
            android:layout_weight="0.21"
            android:src="@drawable/ic_action_user"
            android:clickable="true" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:id="@+id/imageView4"
            android:layout_weight="0.15"
            android:src="@drawable/ic_action_user_add"
            android:clickable="true" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:id="@+id/imageView5"
            android:layout_weight="0.15"
            android:src="@drawable/chat2"
            android:clickable="true" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:id="@+id/imageView6"
            android:layout_weight="0.15"
            android:src="@drawable/setting1"
            android:clickable="true" />
    </LinearLayout>

</TableLayout>
